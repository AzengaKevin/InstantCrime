<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.crimes.list.AllReportsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reports_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/report_view" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_report_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="@dimen/sm_inset"
        android:layout_marginBottom="@dimen/sm_inset"
        android:clickable="true"
        android:contentDescription="@string/add_button_text"
        android:focusable="true"
        android:src="@drawable/ic_baseline_add_24" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>